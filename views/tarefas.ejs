<html>

<head>
    <title>Livraria Loucura Total</title>
    <link rel="stylesheet" href="https://bootswatch.com/cerulean/bootstrap.min.css">
    <style>
        .remover:checked+span {
            color: red;
        }

        .lista-tarefas {
            list-style: none;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false"
                    aria-controls="navbar">
                          <span class="sr-only">Toggle navigation</span>
                          <span class="icon-bar"></span>
                          <span class="icon-bar"></span>
                          <span class="icon-bar"></span>
                        </button>
                <a class="navbar-brand" href="#">Lista de Livros Disponíveis</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">

                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </nav>

    <div class="container">
        <form method="post" action="/tarefa/adicionar">
            <label>Adicionar Livros</label>
            <input type="text" name="codigoLivro" placeholder="Codigo">
            <input type="text" name="tituloLivro" placeholder="Titulo Livro">
            <input type="submit" value="Adicionar">
        </form>

        <%= titulo %>

            <form method="post" action="/tarefa/remover">
                <ul class="lista-tarefas">
                    <% tarefas.forEach(function(tarefa){ %>
                        <li>
                            <label>
                            <input type="checkbox" name="tarefas" class="remover" value="<%= tarefa %>"> <span><%= tarefa %></span>
                        </label>
                        </li>
                        <% }) %>
                </ul>

                <input type="submit" value="Remover">
            </form>

            <div class="well">
                <h3>Informações Complementares Do Livro</h3>

                <form method="post" action="/livro/buscar">
                    <label>Codigo</label><br>
                    <input type="text" name="CodigoBuscado" placeholder="Codigo">
                    <br><br>
                    <input type="submit" value="Buscar">
                </form>

                Título do Livro:
                <%= livro.titulo %>
                    <br> Autor:
                <%= livro.autor %>
                    <br> Editora:
                <%= livro.editora %>
                    <br> Nº de Páginas:
                <%= livro.paginas %>
            </div>

            <div class="well">
                <h3>Editar Livro</h3>
                <form method="post" action="/livro/editar">
                    <label>Codigo</label><br>
                    <input type="text" name="Codigo" placeholder="Codigo">
                    <br><br>
                    <label>Titulo</label><br>
                    <input type="text" name="Titulo" placeholder="Titulo">
                    <br><br>
                    <label>Autor</label><br>
                    <input type="text" name="Autor" placeholder="Autor">
                    <br><br>
                    <label>Editora</label><br>
                    <input type="text" name="Editora" placeholder="Editora">
                    <br><br>
                    <label>Número de Páginas</label><br>
                    <input type="text" name="Paginas" placeholder="Paginas">
                    <br><br>
                    <input type="submit" value="Editar">
                </form>
            </div>
    </div>
</body>

</html>